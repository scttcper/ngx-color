    "rollup-plugin-sourcemaps": "^0.4.2",
    "ts-node": "^4.0.1",
    "tslint": "^5.8.0",
    "typescript": "2.5.x"
  },
  "bundlesize": [
    {
      "path": "./dist/packages-dist/toastr.umd.js",
      "maxSize": "8 kB"
    },
    {
      "path": "./dist/packages-dist/toastr.css",
      "maxSize": "3 kB"
    }
  ]
