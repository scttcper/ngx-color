    "@angular/platform-browser": "^5.1.1",
    "@angular/platform-browser-dynamic": "^5.1.1",
    "@ctrl/ngx-github-buttons": "^1.0.2",
    "bootstrap": "4.0.0-beta.2",
    "core-js": "^2.5.3",
    "material-colors": "^1.2.5",
    "rxjs": "^5.5.5",
    "tinycolor2": "^1.4.1",
    "zone.js": "^0.8.18"
