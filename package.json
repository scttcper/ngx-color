    "@angular/platform-browser-dynamic": "^5.2.0",
    "@ctrl/ngx-github-buttons": "^1.0.3",
    "bootstrap": "4.0.0-beta.3",
    "core-js": "^2.5.3",
    "material-colors": "^1.2.5",
    "rxjs": "^5.5.6",
    "tinycolor2": "^1.4.1",
    "zone.js": "^0.8.20"
