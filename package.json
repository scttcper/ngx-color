{
  "name": "ngx-color",
  "version": "0.0.0",
  "license": "MIT",
  "homepage": "https://github.com/scttcper/ngx-color",
  "bugs": "https://github.com/scttcper/ngx-color/issues",
  "repository": "https://github.com/scttcper/ngx-color.git",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ts-node build.ts",
    "publish": "cd dist/packages-dist && npm publish",
    "bundlesize": "npx bundlesize",
    "ghpages": "ng build --prod --baseHref='/ngx-color/'",
    "test": "ng test --watch=false --code-coverage --browsers=ChromeCI",
    "test:watch": "ng test --browsers=ChromeCI",
    "test:ci": "ng test --watch=false --code-coverage --no-progress --browsers=ChromeCI",
    "lint": "ng lint ngx-color --type-check --format stylish",
    "lint:fix": "ng lint ngx-color --type-check --fix --format stylish",
    "commit": "git-cz",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "cd dist/packages-dist && semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.3",
    "@angular/common": "6.0.3",
    "@angular/compiler": "6.0.3",
    "@angular/core": "6.0.3",
    "@angular/forms": "6.0.3",
    "@angular/http": "6.0.3",
    "@angular/platform-browser": "6.0.3",
    "@angular/platform-browser-dynamic": "6.0.3",
    "@ctrl/ngx-github-buttons": "2.0.3",
    "bootstrap": "4.1.1",
    "core-js": "2.5.6",
    "material-colors": "1.2.5",
    "rxjs": "6.1.0",
    "rxjs-compat": "6.1.0",
    "tinycolor2": "1.4.1",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.7",
    "@angular/cli": "6.0.7",
    "@angular/compiler-cli": "6.0.3",
    "@angular/language-service": "6.0.3",
    "@types/fs-extra": "5.0.2",
    "@types/jasmine": "2.8.7",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "10.0.10",
    "@types/rimraf": "2.0.2",
    "@types/tinycolor2": "1.4.0",
    "codelyzer": "4.3.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "fs-extra": "6.0.1",
    "jasmine-core": "2.99.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.4.3",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-mocha-reporter": "2.2.5",
    "ng-packagr": "4.0.0-rc.0",
    "rimraf": "2.6.2",
    "semantic-release": "15.3.1",
    "travis-deploy-once": "5.0.0",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "2.7.2"
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/packages-dist/bundles/ngx-color.umd.min.js",
      "maxSize": "6 kB"
    }
  ]
}
