    "@types/tinycolor2": "^1.4.0",
    "bundlesize": "^0.15.3",
    "codelyzer": "^4.0.2",
    "fs-extra": "^5.0.0",
    "jasmine-core": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
